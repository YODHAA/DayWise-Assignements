<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.saurabh.kotlin_assignment">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".kotlinactivities.KotlinActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden" />
        <activity
            android:name=".customcomponent.CustomCreation"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden" />

        <activity
            android:name=".sigin_up.SignActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden" />

        <activity
            android:name=".kotlinactivities.TaskDescriptionActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden" />

    </application>

</manifest>